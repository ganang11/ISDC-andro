<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_config_ip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.app.jsdc.ConfigIP">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurasi IP"
        android:textSize="30sp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubah IP dan Port:"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:hint="Contoh IP: 45.77.246.7"
        android:textAlignment="center"
        android:id="@+id/ED_AlamatIP"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:background="#9999"
        android:textSize="25sp"
        />

    <EditText
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:hint="Contoh Port: 8080"
        android:textAlignment="center"
        android:id="@+id/ED_Port"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:background="#9999"
        android:textSize="25sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:text="Masuk"
        android:textSize="15sp"
        android:id="@+id/btn_ConfigIP"
        android:background="#0A243B"
        android:textColor="#ffff"/>

</LinearLayout>
