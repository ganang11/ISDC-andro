<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_kode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.jsdc.Login_kode">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Penguji :"
        android:background="#FF6C2C"
        android:textColor="#fff"
        android:textSize="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/jscd_bawah"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sukri"
        android:textColor="#fff"
        android:textSize="20dp"
        android:id="@+id/pengujiKode"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="98dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukan Nomer Pendaftaran"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/text4"
        android:layout_below="@id/pengujiKode"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/No_daftar"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="40dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_below="@id/text4"
        android:layout_centerHorizontal="true"
        android:background="#9999"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MASUK"
        android:id="@+id/b_loginPeserta"
        android:background="#FF6C2C"
        android:textColor="#fff"
        android:layout_below="@+id/No_daftar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
