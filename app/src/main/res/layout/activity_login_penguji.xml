<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_penguji"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context="com.example.app.jsdc.LoginPenguji">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JSDC"
        android:textColor="#FF6C2C"
        android:textSize="40dp"
        android:id="@+id/jsdc"
        android:textAlignment="center"
        android:background="#0A243B"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jakarta Safety Driving Centre"
        android:textColor="#ffff"
        android:textStyle="italic"
        android:textSize="22dp"
        android:textAlignment="center"
        android:background="#0A243B"
        android:id="@+id/jscd_bawah"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FF6C2C">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="  Penguji :"
            android:textColor="#fff"
            android:textSize="20dp"
            android:id="@+id/textView2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Sukri"
            android:textColor="#fff"
            android:textSize="20dp"
            android:id="@+id/penguji"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Keluar"
            android:textSize="20dp"
            android:textColor="#fff"
            android:id="@+id/keluar"
            android:textAlignment="viewEnd"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Scan QR Code Peserta"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/text4"
        android:gravity="center"
        android:textAlignment="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCAN"
        android:id="@+id/b_scanPeserta"
        android:background="#FF6C2C"
        android:textColor="#fff"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/Bantuan"
        android:text="Gagal scan? Klik disini"
        android:layout_marginTop="10dp"
        />




</LinearLayout>
