                android:layout_marginEnd="41dp"
                android:background="#999"
                android:hint="0"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
