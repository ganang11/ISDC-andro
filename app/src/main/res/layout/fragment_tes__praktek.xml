                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ET_R2D"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/R2D"
                android:layout_alignBottom="@+id/R2D"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="41dp"
                android:background="#999"
                android:hint="0"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ET_R2E"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/R2E"
                android:layout_alignBottom="@+id/R2E"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="41dp"
                android:background="#999"
                android:hint="0"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ET_R2F"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/R2F"
                android:layout_alignBottom="@+id/R2F"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="41dp"
                android:background="#999"
                android:hint="0"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ET_R2G"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/R2G"
                android:layout_alignBottom="@+id/R2G"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="41dp"
                android:background="#999"
                android:hint="0"
